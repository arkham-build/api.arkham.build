{
  "name": "api-v2.arkham.build",
  "version": "0.1.0",
  "main": "src/main.ts",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "check": "tsc",
    "dbmate": " DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable dbmate",
    "dev": "node --watch --experimental-strip-types src/main.ts",
    "fmt": "biome check --write",
    "generate:database-types": "DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable kysely-codegen --out-file src/db/schema.types.ts",
    "ingest": "npm run ingest:metadata && npm run ingest:arkhamdb-decklists",
    "ingest:metadata": "node --experimental-strip-types src/scripts/ingest-metadata.ts",
    "ingest:arkhamdb-decklists": "node --experimental-strip-types src/scripts/ingest-arkhamdb-decklists.ts",
    "lint": "biome check",
    "start": "node --experimental-strip-types src/main.ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@testcontainers/postgresql": "11.5.0",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/node22": "22.0.2",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.17.0",
    "@types/papaparse": "5.3.16",
    "@types/pg": "8.15.5",
    "kysely-codegen": "0.18.5",
    "testcontainers": "11.5.0",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@fast-csv/parse": "5.0.2",
    "@hono/node-server": "1.18.1",
    "hono": "4.8.12",
    "kysely": "0.28.4",
    "pg": "8.16.3",
    "zod": "4.0.14"
  }
}
